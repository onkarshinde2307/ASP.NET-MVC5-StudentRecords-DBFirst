@{
    ViewBag.Title = "Contact";
}

<section class="py-5 bg-light">
    <div class="container">
        <h2 class="fw-bold text-primary mb-4 text-center">@ViewBag.Title Us</h2>
        <p class="lead text-center mb-5">
            We'd love to hear from you! Reach out for any questions, admissions, or collaborations.
        </p>

        <div class="row">
            <!-- Contact Info -->
            <div class="col-md-6 mb-4">
                <div class="card shadow-sm border-0">
                    <div class="card-body">
                        <h5 class="fw-bold text-primary mb-3">Our Address</h5>
                        <p class="mb-2">
                            <i class="fa fa-map-marker-alt text-primary"></i> Near Rahul Tower, Kothrud Depot, Pune, Maharashtra 411038
                        </p>
                        <p class="mb-2">
                            <i class="fa fa-phone text-primary"></i> +91 9604964346
                        </p>
                        <p class="mb-2">
                            <i class="fa fa-envelope text-primary"></i>
                            <a href="mailto:shindeonkar7408@gmail.com">shindeonkar7408@gmail.com</a>
                        </p>
                        <h6 class="fw-bold mt-4">Business Hours</h6>
                        <p class="mb-0">Monday - Friday: 9am - 6pm</p>
                        <p>Saturday: 9am - 1pm</p>
                    </div>
                </div>
            </div>

            <!-- Embedded Map -->
            <div class="col-md-6 mb-4">
                <div class="card shadow-sm border-0">
                    <div class="card-body p-0">
                        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3783.429911623091!2d73.8073624749559!3d18.49235188258516!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3bc2bfbd216b391d%3A0xf27c6e94e3f722b5!2sRahul%20Tower%2C%20Paud%20Rd%2C%20Kothrud%2C%20Pune%2C%20Maharashtra%20411038!5e0!3m2!1sen!2sin!4v1717853353656!5m2!1sen!2sin"
                                width="100%"
                                height="300"
                                style="border:0;"
                                allowfullscreen=""
                                loading="lazy"
                                referrerpolicy="no-referrer-when-downgrade">
                        </iframe>
                    </div>
                </div>
            </div>
        </div>

        <!-- Call to Action -->
        <div class="text-center mt-5">
            <h4 class="fw-bold text-primary mb-3">Need Help?</h4>
            <p class="lead mb-3">Contact our team and we’ll get back to you as soon as possible.</p>
            <a class="btn btn-primary btn-lg shadow-sm" href="mailto:shindeonkar7408@gmail.com">
                <i class="fa fa-envelope"></i> Send us an Email
            </a>
        </div>
    </div>
</section>
