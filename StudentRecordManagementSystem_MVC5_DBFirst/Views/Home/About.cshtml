@{
    ViewBag.Title = "About";
}
<section class="container py-5">
    <div class="row">
        <div class="col-md-6">
            <h2 class="fw-bold text-primary mb-3">@ViewBag.Title</h2>
            <p class="lead">@ViewBag.Message</p>
            <p>
                At <strong>Our Academy</strong>, we believe that education should be accessible, engaging, and practical. We offer real-time mentoring, live sessions, project guidance, and career counseling for aspiring tech professionals.
            </p>
        </div>
        <div class="col-md-6">
            <img src="~/images/about_us.jpg" class="img-fluid rounded shadow" alt="About Our Academy" />
        </div>
    </div>
</section>
