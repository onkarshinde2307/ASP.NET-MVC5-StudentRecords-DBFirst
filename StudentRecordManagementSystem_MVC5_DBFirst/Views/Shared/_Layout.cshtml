<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Academy Student Portal</title>
    <link rel="icon" href="~/Content/images/logo.png" />

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
</head>
<body>
    @{
        var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
        var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
    }

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand d-flex align-items-center" href="@Url.Action("Index", "Home")">
                <img src="~/Content/images/avatars/logo.png" alt="Logo" style="height:50px; width:auto; margin-right:10px;" />
                <span style="font-size: 1.5rem;  font-weight: bold;">Onkar Shinde’s Learning Hub</span>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">

                    @* Show ONLY on StudentsController pages *@
                    @if (currentController == "Students")
                    {
                        <li class="nav-item">
                            <a class="nav-link text-white" href="@Url.Action("Index", "Home")">
                                <i class="fa fa-home"></i> Dashboard
                            </a>
                        </li>
                        @*<li class="nav-item">
                            <a class="nav-link text-white" href="@Url.Action("Index", "Students")">
                                <i class="fa fa-users"></i> Students
                            </a>
                        </li>*@
                        <li class="nav-item">
                            <a class="nav-link text-white" href="@Url.Action("Create", "Students")">
                                <i class="fa fa-plus"></i> Add Student
                            </a>
                        </li>
                    }

                    @* Show ONLY on HomeController pages *@
                    @if (currentController == "Home")
                    {
                        <li class="nav-item">
                            <a class="nav-link text-white" href="@Url.Action("Contact", "Home")">
                                <i class="fa fa-envelope"></i> Contact
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <!-- ✅ Page-specific content will render here -->
    <div class="container mt-4">
        @RenderBody()
    </div>

    <footer class="text-center text-muted py-3 mt-5 border-top">
        © 2025 Academy Student Management Systemt
    </footer>
